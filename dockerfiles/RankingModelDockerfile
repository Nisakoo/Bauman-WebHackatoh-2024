ARG PYTHON_VERSION=3.12

FROM python:${PYTHON_VERSION}-slim AS ranking-model-compiler

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

RUN python -m venv ./.venv
ENV PATH="/app/.venv/bin:$PATH"

COPY requirements.txt ./
RUN pip install -Ur requirements.txt


FROM python:${PYTHON_VERSION}-slim AS ranking-model-runner

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /ranking-model
COPY --from=ranking-model-compiler /app/.venv ./.venv

ENV PATH="/ranking-model/.venv/bin:$PATH"
COPY ./ranking_model ./

EXPOSE 8125

CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8125"]
