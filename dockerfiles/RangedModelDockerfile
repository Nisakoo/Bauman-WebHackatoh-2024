ARG PYTHON_VERSION=3.12

FROM python:${PYTHON_VERSION}-slim AS ranged-model-compiler

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

RUN python -m venv ./.venv
ENV PATH="/app/.venv/bin:$PATH"

COPY requirements.txt ./
RUN pip install -Ur requirements.txt


FROM python:${PYTHON_VERSION}-slim AS ranged-model-runner

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /ranged-model
COPY --from=ranged-model-compiler /app/.venv ./.venv

ENV PATH="/ranged-model/.venv/bin:$PATH"
COPY ./ranged_model ./

EXPOSE 8125

CMD ["python", "-m", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8125"]
